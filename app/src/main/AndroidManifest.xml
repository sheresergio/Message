<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.messageimposible.messageimpossible">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/message_impossible_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/message_impossible_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Activity.ActivityTabs"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.ActivityLogin" />
        <activity android:name=".Activity.ActivityRegister" />
        <activity android:name=".Activity.ActivityAddFriend"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.ActivityForgotPass" />
        <activity android:name=".Activity.ActivityInchat"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".Activity.ActivitySplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ActivitySendInvites"
            android:theme="@style/AppTheme.MyPopupTheme"/>

        <activity android:name=".Activity.ActivityAcceptInvites"
            android:theme="@style/AppTheme.MyPopupTheme"/>

        <activity android:name=".Activity.ActivityDeleteChat"
            android:theme="@style/AppTheme.MyPopupTheme"/>

    </application>


</manifest>